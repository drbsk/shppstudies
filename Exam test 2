Напишіть функцію, яка приймає на вхід три числа, і повертає число 1, якщо їх сума знаходиться в діапазоні від 0 до 100, інакше повертає найбільше серед них, або -1, якщо вони всі рівні.


function main () {
    let array = [];
    let arraySum = 0;
    let allArrayElemnetsEquals;
    let arrayMaxNum = 0;

    for (let i = 0; i < 3; i++) {
        array[i] = +prompt("Введите число");
    }

    for (let i = 0; i < array.length; i++) {
        arraySum += array[i];
    }

    for (let i = 1; i < array.length; i++) {
        if (array[i] !== array[0]) {
            allArrayElemnetsEquals = false;
            break;
        } else if (array[i] == array[0]) {
            allArrayElemnetsEquals = true;
        }
    }

    if (arraySum > 0 && arraySum <= 100 && allArrayElemnetsEquals == false) {
        console.log(1);
    } else if (allArrayElemnetsEquals == true) {
        console.log(-1);
    } else {
        for (let i = 0; i < array.length; i++) {
            if (array[i] > arrayMaxNum) {
                arrayMaxNum = array[i];
            }
        }

        console.log(arrayMaxNum);
    }
}

main();

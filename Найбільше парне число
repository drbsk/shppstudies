let input = 2;
let b;
let c = 2;

for (let i = 0; i < input;) {
    input = parseInt(
        prompt("Введите число или введите 0 что бы остановить программу")
    );

    if (input == 0) {
        if (input == 0 && b == null) {
            console.log("Жодного парного");
        } else {
            console.log(c);
        }

        break;
    } else if (input % 2 == 0) {
        b = input;

        if (b >= c) {
            c = input;
        }
    }
}
